{
  "servers": {
    "xcodebuildmcp": {
      "command": "npx",
      "args": ["-y", "xcodebuildmcp@latest"],
      "env": {
        "WORKSPACE_ROOT": "${workspaceFolder}",
        "PROJECT_PATH": "${workspaceFolder}/Package.swift",
        "SCHEME": "Showcase"
        // Skip UI automation checks
        // "XC_AUTOMATION_OPTS": "--skip-ui"
      }
    }
  }
}
